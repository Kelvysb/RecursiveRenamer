<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <PackageLicenseFile>COPYING.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/Kelvysb/RecursiveRenamer</PackageProjectUrl>
    <Authors>Kelvys B. Pantale√£o</Authors>
    <Description>Command line tool to recursively rename files based on regex pattern search and replace.</Description>
    <ReleaseNotes>Better single opperation error handling</ReleaseNotes>
    <Copyright>Kelvys B. 2019</Copyright>
    <PackageTags>Recursive Rename Tool RegEx Pattern</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.4</Version>
    <AssemblyVersion>1.0.4.0</AssemblyVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NewtonSoft.Json" Version="13.0.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="COPYING.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
